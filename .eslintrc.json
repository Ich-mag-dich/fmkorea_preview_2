{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "standard-with-typescript"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./"]
    },
    "plugins": [
        "vue",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            // 아래 규칙들은 개인 선호에 따라 prettier 문법 적용
            // https://prettier.io/docs/en/options.html
            {
              "singleQuote": true,
              "semi": true,
              "useTabs": true,
              "tabWidth": 2,
              "trailingComma": "all",
              "printWidth": 80,
              "bracketSpacing": true,
              "arrowParens": "avoid"
            }
          ] 
          
    }
}
